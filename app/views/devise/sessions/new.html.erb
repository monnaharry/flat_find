<div class="container">
  <h2 class="page-title">Welcome back!</h2>
  <div class="row">
    <div class="col-md-6" >
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "log-in-form" }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'btn btn-primary-teal'  %>
        </div>
      <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div>
</div>
