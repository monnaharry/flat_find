<% @images.each do |image| %>
<%= cl_image_tag image.url, height: 300, width: 400, crop: :fill %>
<%= link_to 'delete', image_path(image),
method: :delete,
data: { confirm: "Are you sure?" } %>
<% end %>
<hr>
<div class="container">
  <div class="photo-headline">
    <div class="photo-form">
      <p>Upload a photo</p>
      <%= render 'form' %>
    </div>
  </div>
</div>
<hr>

<div class="photo-back-button">
  <%= link_to 'Back to flat', flat_path(@flat), class: 'btn btn-primary' %>
</div>
