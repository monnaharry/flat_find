<h1>Hi <%= @user.name %>, welcome to your profile page</h1>
<%= cl_image_tag @user.profile_pic, width: 150, height: 150, crop: :thumb, gravity: :face%>

<%= render 'form' %>

<hr>
<% @user.flats.each do |flat| %>
  <p>
    <%= link_to flat.name, flat_path(flat) %>
    <%= flat.price %>
  </p>
<% end %>
<%= link_to 'Back to index', flats_path %>
