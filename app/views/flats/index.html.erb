<div class="container">

  <h2 class="page-title">Where do you want to go?</h2>
  <div class="cards-index-container">

    <% @flats.each do |flat| %>
      <% flat.images.each do |image| %>
        <div class="card-trip">
          <%= cl_image_tag image.url, height: 300, width: 400, crop: :fill %>
          <div class="card-trip-infos">
            <div>
              <h2><%= flat.name %></h2>
              <p><%= flat.description.split[0...20].join(' ') %></p>
            </div>
            <h2 class="card-trip-pricing">Â£<%= flat.price %></h2>
            <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>
</div>


