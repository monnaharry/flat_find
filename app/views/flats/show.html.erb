<div class="container0">

<div class="container1">
  <h2><%= @flat.name %></h2>
  <h4>Hosted by <%=@user.name %></h4>
</div>


<div class="container2">
  <% @flat.images.each do |image| %>
  <div class="bw">
  <%= cl_image_tag image.url, height: 300, width: 400, crop: :fill %>
  </div>
  <% end %>
</div>

  <%= link_to 'Change pictures', flat_images_path(@flat) %>
  <p><%= @flat.address %></p>
  <p><%= @flat.description %></p>
  <p><%=@flat.price%>â‚¬ per night</p>
  <p><%= link_to 'Request to book', new_flat_reservation_path(@flat) %></p>
  <div class="booking-info">
      <% @flat.reservations.each do |res| %>
      <p>Booked from: <%= res.start_date %></p>
      <p>To: <%= res.end_date %></p>
    <% end %>
  </div>
  <div class="container1">
    <p> <%= link_to "Back to listings", flats_path, class: 'btn btn-primary-teal' %> </p>

    <p> <%= link_to "Remove listing", flat_path(@flat),
              method: :delete,
              data: { confirm: "Are you sure you want to remove your #{@flat.name} listing?" },
              class: 'btn btn-secondary-teal'
              %></p>
  </div>
</div>
