<% if @flat.user == current_user %>
  <%= render 'edit-message' %>
<% end %>

<%= render 'carousel' %>


<div class="show-page-content-container">
  <div class="show-page-heading-wrapper">
    <div class="show-page-property-tag">
      <% if !@flat.property_type.nil? %>
        <p><%= @flat.property_type %></p>
      <% else %>
        <p>Entire House</p>
      <% end %>
    </div>
    <div class="show-page-heading">
      <div class="show-page-heading-left">
        <h2><%= @flat.name %></h2>
        <p><%= @flat.address %></p>
      </div>
      <div class="show-page-heading-right text-center">
        <%= cl_image_tag @flat.user.profile_pic, width: 75, height: 75, crop: :thumb, gravity: :face, class: "card-trip-user avatar avatar-bordered" %>
          <p><%= @flat.user.name %></p>
      </div>
    </div>
  </div>

<hr>


  <div class="show-page-listing-details">
    <h4><%= @flat.property_type %></h4>
    <ul class="list-inline show-page-links">
      <li> <%= @flat.guest %> guests </li>
      <li> <%= @flat.bed %> beds </li>
      <li> <%= @flat.bathroom %> bathrooms </li>
    </ul>
  </div>

  <hr>

  <div class="show-page-description">
    <h4>The Place</h4>
    <p><%= @flat.description %></p>
  </div>

</div>

<div class="show-page-booking-info-container">
  <div class="show-page-booking-info">
    <p><%=@flat.price%>â‚¬ per night</p>
    <%= link_to 'Request to book', new_flat_reservation_path(@flat), class: "btn btn-primary-teal" %>
  </div>
</div>
